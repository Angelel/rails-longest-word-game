<h1>New Game</h1>
<ul class="letters-container">
  <% @letters.each do |letter| %>
    <li class="letters"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <input type="text" name="word" placeholder="What is your word??">
  <input type="submit">
</form>
